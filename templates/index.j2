{% extends "layout.j2" %}

{% block content %}
<header class="cover">
  <div class="cover-box" tabindex="0">
    <div class="cover-box-pieces">
    </div>

    <div>
      <div class="cover-box-letter"><span>a</span></div>
      <div class="cover-box-letter"><span>l</span></div>
      <div class="cover-box-letter"><span>e</span></div>
      <div class="cover-box-letter"><span>x</span></div>
      <div class="cover-box-letter"><span>l</span></div>
      <div class="cover-box-letter"><span>u</span></div>
      <div class="cover-box-letter"><span>n</span></div>
      <div class="cover-box-letter" style="font-style: italic;"><span>Ñ‘</span></div>
      <div class="cover-box-letter"><span>v</span></div>
    </div>
  </div>

  <div class="cover-shutter"></div>
</header>
<div class="grid">
  {% for row in grid %}
    {% set rowI = loop.index %}
    <div class="row">
      {% for item in row %}
        <a href="{{ item.id }}.html" tabindex="0" class="item  {% if item.isVertical %}-v{% else %}-h{% endif %}" style="width: {{ item.gridSize }}%">
          <div class="image-container {% if item.isVertical %}-v{% else %}-h{% endif %}">
            <img src="images/thumbs/{{ item.id }}.jpg" style="background-color: {{ item.color }};" {% if rowI > 2 %}loading="lazy"{% endif %} alt="{{ item.title }}">
          </div>
        </a>
      {% endfor %}
    </div>
  {% endfor %}
</div>

<footer class="footer">
  <a href="https://instagram.com/sunify" target="_blank" noreferrer noopener>instagram.com/sunify</a>
</footer>
{% endblock %}
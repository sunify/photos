{% extends "layout.j2" %}

{% block content %}
<div class="cover">
<div class="cover-box">
  <div class="cover-box-item"><span>A</span></div>
  <div class="cover-box-item"><span>L</span></div>
  <div class="cover-box-item"><span>E</span></div>
  <div class="cover-box-item"><span>X</span></div>
  <div class="cover-box-item"><span>L</span></div>
  <div class="cover-box-item"><span>U</span></div>
  <div class="cover-box-item"><span>N</span></div>
  <div class="cover-box-item"><span>YO</span></div>
  <div class="cover-box-item"><span>V</span></div>
</div>
</div>
<div class="grid">
  {% for item in items %}
  <a href="{{ item.id }}.html" class="item">
    <div class="image-container {% if item.size.width > item.size.height %}-h{% else %}-v{% endif %}">
      <img src="images/thumbs/{{ item.id }}.jpg" style="background-color: {{ item.color }};" loading="lazy" alt="{{ item.title }}">
    </div>
  </a>
  {% endfor %}
</div>
{% endblock %}